\end{definition}

%TCIMACRO{\TeXButton{blue}{\color[rgb]{0,0,1}}}%
%BeginExpansion
\color[rgb]{0,0,1}%
%EndExpansion
\textbf{Question:} 
%TCIMACRO{\TeXButton{blueEnd}{\color[rgb]{0,0,0}}}%
%BeginExpansion
\color[rgb]{0,0,0}%
%EndExpansion
Find the value of line integral when $\mathbf{F}\left( \mathbf{r}\right) =%
\left[ z,x,y\right] $ and $C=\left[ \cos t,\sin t,3t\right] ;~0\leq t\leq
2\pi $ is a helix.

%TCIMACRO{\TeXButton{blue}{\color[rgb]{0,0,1}}}%
%BeginExpansion
\color[rgb]{0,0,1}%
%EndExpansion
\textbf{Solution:} 
%TCIMACRO{\TeXButton{blueEnd}{\color[rgb]{0,0,0}} }%
%BeginExpansion
\color[rgb]{0,0,0}
%EndExpansion
Note that $\mathbf{F}\left( \mathbf{r}\right) $ is not in terms of parameter 
$t,$ hence from $C$ we substitute $x=\cos t,y=\sin t$ and $z=3t$ into it and
get $\mathbf{F}\left( \mathbf{r}\right) =\left[ 3t,\cos t,\sin t\right] .$
Then 
\begin{eqnarray*}
I &=&\int_{C}\mathbf{F}\left( \mathbf{r}\right) \cdot d\mathbf{r=}%
\int_{0}^{2\pi }\left( \left[ 3t,\cos t,\sin t\right] \cdot \frac{d}{dt}%
\left[ \cos t,\sin t,3t\right] \right) dt \\
&=&\int_{0}^{2\pi }\left( \left[ 3t,\cos t,\sin t\right] \cdot \left[ -\sin
t,\cos t,3\right] \right) dt \\
&=&\int_{0}^{2\pi }\left( -3t\sin t+\cos ^{2}t+3\sin t\right) dt=7\pi =21.99
\end{eqnarray*}%
Sketch of the vector field and the curve is given below:%
\begin{equation*}
\FRAME{itbpF}{1.8619in}{1.8619in}{0in}{}{}{q10e-lineint-example.wmf}{\special%
{language "Scientific Word";type "GRAPHIC";maintain-aspect-ratio
TRUE;display "USEDEF";valid_file "F";width 1.8619in;height 1.8619in;depth
0in;original-width 2.6671in;original-height 2.6671in;cropleft "0";croptop
"1";cropright "1";cropbottom "0";filename
'q10e-LineInt-Example.wmf';file-properties "XNPEU";}}~~~~~\blacksquare
\end{equation*}

\begin{remark}
\begin{enumerate}
\item We have followig natural properties of a line integral: $\int_{C}k%
\mathbf{F}\cdot d\mathbf{r=}k\int_{C}\mathbf{F}\cdot d\mathbf{r~~,~~}%
\int_{C}\left( \mathbf{F+G}\right) \cdot d\mathbf{r=\int_{C}F\cdot }d\mathbf{%
\mathbf{r}+\int_{C}G}\cdot d\mathbf{r}$ and $\int_{C}\mathbf{F}\cdot d%
\mathbf{r=}\int_{C_{1}}\mathbf{F}\cdot d\mathbf{r+}\int_{C_{2}}\mathbf{F}%
\cdot d\mathbf{r}$ where $C_{1}$ and $C_{2}$ are subdividing curves of $C$
with same orientation as that of $C.$

\item At times, without taking dot product we may obtain a line integral
whose value is a vector rather than a scalar, as follows: 
\begin{equation*}
\int_{C}\mathbf{F}\left( \mathbf{r}\right) dt=\int_{a}^{b}\mathbf{F}\left( 
\mathbf{r}\left( t\right) \right) dt=\int_{a}^{b}\left[ \mathbf{F}_{1}\left( 
\mathbf{r}\left( t\right) \right) ,~\mathbf{F}_{2}\left( \mathbf{r}\left(
t\right) \right) ,~\mathbf{F}_{3}\left( \mathbf{r}\left( t\right) \right) %
\right] dt
\end{equation*}%
For the special case when $\mathbf{F}_{1}=f$ and $\mathbf{F}_{2}=\mathbf{F}%
_{3}=0,$ we have 
\begin{equation*}
\int_{C}f\left( \mathbf{r}\right) dt=\int_{a}^{b}f\left( \mathbf{r}\left(
t\right) \right) dt
\end{equation*}

\item In general, a line integral's value would change by the change of
curve $C$ e.g.%
\begin{eqnarray*}
\int_{C:\left[ t,t,0\right] ;0\leq t\leq 1}\left[ 0,xy,0\right] d\mathbf{r} &%
\mathbf{=}&\int_{0}^{1}\left( \left[ 0,t^{2},0\right] \cdot \left[ 1,1,0%
\right] \right) dt\mathbf{=}\int_{0}^{1}t^{2}dt=\frac{1}{3} \\
\int_{C:\left[ t,t^{2},0\right] ;0\leq t\leq 1}\left[ 0,xy,0\right] d\mathbf{%
r} &\mathbf{=}&\int_{0}^{1}\left( \left[ 0,t^{3},0\right] \cdot \left[ 1,2t,0%
\right] \right) dt=\int_{0}^{1}2t^{4}dt\mathbf{=}\frac{2}{5}
\end{eqnarray*}
\begin{equation*}
\FRAME{itbpF}{2.3826in}{2.3826in}{0in}{}{}{q10e-lineint-example2.wmf}{%
\special{language "Scientific Word";type "GRAPHIC";maintain-aspect-ratio
TRUE;display "USEDEF";valid_file "F";width 2.3826in;height 2.3826in;depth
0in;original-width 2.6671in;original-height 2.6671in;cropleft "0";croptop
"1";cropright "1";cropbottom "0";filename
'q10e-LineInt-Example2.wmf';file-properties "XNPEU";}}~~~~~\blacksquare
\end{equation*}
\end{enumerate}
\end{remark}

