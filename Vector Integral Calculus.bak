"Scientific Word";type "GRAPHIC";maintain-aspect-ratio TRUE;display
"USEDEF";valid_file "T";width 1.9519in;height 1.8343in;depth
0in;original-width 2.7363in;original-height 2.5694in;cropleft "0";croptop
"1";cropright "1";cropbottom "0";tempfilename
